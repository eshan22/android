<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
  
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.projectone.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
  <activity
            android:name="com.example.projectone.Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.projectone.START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
<activity
            android:name="com.example.projectone.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.projectone.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
  
<activity
            android:name="com.example.projectone.TextPlay"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.projectone.TEXTPLAY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

<activity
            android:name="com.example.projectone.Scroll"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.projectone.SCROLL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

<activity
       android:screenOrientation="portrait"
            android:name="com.example.projectone.Camera"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.projectone.CAMERA" />
                <category android:name="android.intent.category.DEFAULT" />
       
                </intent-filter>
       
        </activity>
</application>

</manifest>